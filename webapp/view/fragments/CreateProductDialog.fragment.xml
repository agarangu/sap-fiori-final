<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
>
    <Dialog
        id="createProductDialog"
        title="{i18n>ProductDialogTitle}"
        contentWidth="40vw"
		contentHeight="40vh"
    >
        <content>
            <VBox class="sapUiSmallMargin" id="createProductFormContainer" >
                <f:SimpleForm
                    id="createProductDetailsForm"
                    editable="true"
					layout="ColumnLayout"
					columnsM="2"
					columnsL="2"
					columnsXL="2"
                >
                    <f:content>
                        <Label text="{i18n>ProductID}" />
                        <Input value="{ProductID}" />
                        <Label text="{i18n>ProductName}" />
                        <Input value="{ProductName}" />
                        <Label text="{i18n>QuantityPerUnit}" />
                        <Input value="{QuantityPerUnit}" />
                        <Label text="{i18n>UnitPrice}" />
                        <Input value="{UnitPrice}" />
                        <Label text="{i18n>UnitsInStock}" />
                        <Input value="{UnitsInStock}" />
                        <Label text="{i18n>UnitsOnOrder}" />
                        <Input value="{UnitsOnOrder}" />
                        <Label text="{i18n>ReorderLevel}" />
                        <Input value="{ReorderLevel}" />
                        <Label text="{i18n>Discontinued}" />
                        <Input value="{Discontinued}" />
                        <Label text="{i18n>CategoryName}" />
                        <Select
                            forceSelection="false"
                            items="{
                                path: '/Categories',
                                sorter: { path: 'CategoryName' }
                            }">
                            <c:Item key="{CategoryID}" text="{CategoryName}" />
                        </Select>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <footer>
			<Toolbar>
				<content>
					<ToolbarSpacer />
					<Button type="Accept"
                        text="{i18n>DialogSaveButton}"
                        press="._closeDialog" />
                    <Button type="Default"
                        text="{i18n>DialogCloseButton}"
                        press="._closeDialog" />
				</content>
			</Toolbar>
		</footer>
    </Dialog>
</c:FragmentDefinition>
