<c:FragmentDefinition
    xmlns="sap.ui.table"
    xmlns:c="sap.ui.core"
    xmlns:m="sap.m"
>
    <Table
        id="productsTable"
        selectionMode="None"
        rows="{Products}"
        rowMode="Auto"
        rowActionCount="1"
    >
        <extension>
            <m:OverflowToolbar>
                <m:Title
                    id="productsTableTitle"
                    text="{i18n>ProductsTable}"
                />
                <m:ToolbarSpacer />
                <m:Button
                    icon="sap-icon://clear-filter"
                    tooltip="{i18n>clearFiltersTooltip}"
                    press="clearAllFilters"
                />
                <m:Button
                    icon="sap-icon://add-product"
                    tooltip="{i18n>createProductTooltip}"
                    press="onCreatePopoverDialog"
                />
            </m:OverflowToolbar>
        </extension>
        <rowActionTemplate>
            <RowAction>
                <RowActionItem
                    type="Navigation"
                    press="onOpenPopoverDialog"
                />
            </RowAction>
        </rowActionTemplate>
        <columns>
            <Column
                filterProperty="ProductID"
                filterType="sap.ui.model.type.Integer"
                width="4rem"
            >
                <m:Label text="{i18n>ProductID}" />
                <template>
                    <m:Text
                        text="{ProductID}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column filterProperty="ProductName">
                <m:Label text="{i18n>ProductName}" />
                <template>
                    <m:Text
                        text="{ProductName}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column
                filterProperty="UnitPrice"
                filterType="sap.ui.model.type.Integer"
            >
                <m:Label text="{i18n>UnitPrice}" />
                <template>
                    <m:Text
                        text="{UnitPrice}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column
                filterProperty="UnitsInStock"
                filterType="sap.ui.model.type.Integer"
            >
                <m:Label text="{i18n>UnitsInStock}" />
                <template>
                    <m:Text
                        text="{UnitsInStock}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column
                filterProperty="UnitsOnOrder"
                filterType="sap.ui.model.type.Integer"
            >
                <m:Label text="{i18n>UnitsOnOrder}" />
                <template>
                    <m:Text
                        text="{UnitsOnOrder}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column>
                <m:Label text="{i18n>CategoryName}" />
                <template>
                    <m:Text
                        text="{Category/CategoryName}"
                        wrapping="false"
                    />
                </template>
            </Column>
        </columns>
    </Table>
</c:FragmentDefinition>
