<c:FragmentDefinition
    xmlns="sap.ui.table"
    xmlns:c="sap.ui.core"
    xmlns:m="sap.m"
    xmlns:mode="sap.ui.table.rowmodes"
	xmlns:u="sap.ui.unified"
>
    <Table
        id="productsTable"
        selectionMode="None"
        rows="{Products}"
        rowActionCount="1"
    >
        <rowMode>
            <mode:Fixed rowCount="5" />
        </rowMode>
        <extension>
            <m:OverflowToolbar>
                <m:Title
                    id="productsTableTitle"
                    text="{i18n>ProductsTable}"
                />
                <m:ToolbarSpacer />
                <m:Button
                    icon="sap-icon://clear-filter"
                    tooltip="{i18n>clearFiltersTooltip}"
                    press="clearAllFilters"
                />
                <m:Button
                    icon="sap-icon://add-product"
                    tooltip="{i18n>createProductTooltip}"
                    press="onCreatePopoverDialog"
                />
            </m:OverflowToolbar>
        </extension>
        <rowActionTemplate>
            <RowAction>
                <RowActionItem
                    type="Navigation"
                    press="onOpenPopoverDialog"
                />
            </RowAction>
        </rowActionTemplate>
        <columns>
            <Column width="4rem">
                <m:Label text="{i18n>ProductID}" />
                <template>
                    <m:Text
                        text="{ProductID}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column>
                <m:Label text="{i18n>ProductName}" />
                <template>
                    <m:Text
                        text="{ProductName}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column hAlign="Center">
                <m:Label text="{i18n>UnitPrice}" />
                <template>
                    <m:Text
                        text="$ {UnitPrice}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column hAlign="End">
                <m:Label text="{i18n>UnitsInStock}" />
                <template>
                    <m:Text
                        text="{UnitsInStock}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column hAlign="End">
                <m:Label text="{i18n>UnitsOnOrder}" />
                <template>
                    <m:Text
                        text="{UnitsOnOrder}"
                        wrapping="false"
                    />
                </template>
            </Column>
            <Column>
                <m:Label text="{i18n>CategoryName}" />
                <template>
                    <m:Text
                        text="{Category/CategoryName}"
                        wrapping="false"
                    />
                </template>
            </Column>
        </columns>
    </Table>
</c:FragmentDefinition>
