<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
>
    <Dialog
        id="createProductDialog"
        title="{i18n>ProductDialogTitle}"
        contentWidth="40vw"
        contentHeight="40vh"
    >
        <content>
            <VBox
                class="sapUiSmallMargin"
                id="createProductFormContainer"
            >
                <f:SimpleForm
                    id="createProductDetailsForm"
                    editable="true"
                    layout="ColumnLayout"
                    columnsM="2"
                    columnsL="2"
                    columnsXL="2"
                >
                    <f:content>
                        <Label text="{i18n>ProductName}" />
                        <Input value="{newProductModel>/ProductName}" />
                        <Label text="{i18n>QuantityPerUnit}" />
                        <Input value="{newProductModel>/QuantityPerUnit}" type="Number" />
                        <Label text="{i18n>UnitPrice}" />
                        <Input value="{newProductModel>/UnitPrice}" type="Number" />
                        <Label text="{i18n>UnitsInStock}" />
                        <Input value="{newProductModel>/UnitsInStock}" type="Number" />
                        <Label text="{i18n>UnitsOnOrder}" />
                        <Input value="{newProductModel>/UnitsOnOrder}" type="Number" />
                        <Label text="{i18n>ReorderLevel}" />
                        <Input value="{newProductModel>/ReorderLevel}" type="Number" />
                        <Label text="{i18n>Discontinued}" />
                        <Select forceSelection="false" selectedKey="{newProductModel>/Discontinued}">
                            <items>
                                <c:Item
                                    text="{i18n>trueText}"
                                    key="true"
                                />
                                <c:Item
                                    text="{i18n>falseText}"
                                    key="false"
                                />
                            </items>
                        </Select>
                        <Label text="{i18n>CategoryName}" />
                        <Select
                            forceSelection="false"
                             selectedKey="{newProductModel>/CategoryID}"
                            items="{
                                path: '/Categories',
                                sorter: { path: 'CategoryName' }
                            }"
                        >
                            <c:Item
                                key="{CategoryID}"
                                text="{CategoryName}"
                            />
                        </Select>
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
        <footer>
            <Toolbar>
                <content>
                    <ToolbarSpacer />
                    <Button
                        type="Accept"
                        text="{i18n>DialogSaveButton}"
                        press="onSave"
                    />
                    <Button
                        type="Default"
                        text="{i18n>DialogCloseButton}"
                        press="._closeDialog"
                    />
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</c:FragmentDefinition>
